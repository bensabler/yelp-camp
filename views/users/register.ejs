<% layout('layouts/boilerplate') %>
<div class="row d-flex justify-content-center align-items-center h-100">
  <div class="col-lg-12 col-xl-11">
    <div class="card text-black border-0">
      <div class="card-body p-md-5">
        <div class="row justify-content-center">
          <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
            <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
            <form
              action="/register"
              method="POST"
              class="validated-form mx-1 mx-md-4"
              novalidate
            >
              <!-- Name Field -->
              <div class="d-flex flex-row align-items-center mb-4">
                <i
                  class="bi bi-person-fill me-3 mt-auto"
                  style="font-size: 2rem"
                ></i>
                <div class="form-floating flex-fill mb-0">
                  <input
                    class="form-control"
                    type="text"
                    id="name"
                    name="name"
                    placeholder="Full Name"
                    required
                  />
                  <label class="form-label" for="name">Full Name</label>
                  <div class="invalid-feedback">
                    Please enter your full name.
                  </div>
                </div>
              </div>

              <!-- Username Field -->
              <div class="d-flex flex-row align-items-center mb-4">
                <i
                  class="bi bi-person-circle me-3 mt-auto"
                  style="font-size: 2rem"
                ></i>
                <div class="form-floating flex-fill mb-0">
                  <input
                    class="form-control"
                    type="text"
                    id="username"
                    name="username"
                    placeholder="Username"
                    required
                  />
                  <label class="form-label" for="username">Username</label>
                  <div class="invalid-feedback">Please enter a username.</div>
                </div>
              </div>

              <div class="d-flex flex-row align-items-center mb-4">
                <i
                  class="bi bi-envelope-fill me-3 mt-auto"
                  style="font-size: 2rem"
                ></i>
                <div class="form-floating flex-fill mb-0">
                  <input
                    class="form-control"
                    type="email"
                    id="email"
                    name="email"
                    placeholder="Email"
                    required
                  />
                  <label class="form-label" for="email">Your Email</label>

                  <div class="invalid-feedback">Please enter an email.</div>
                </div>
              </div>

              <div class="d-flex flex-row align-items-center mb-4">
                <i
                  class="bi bi-lock-fill me-3 mt-auto"
                  style="font-size: 2rem"
                ></i>
                <div class="form-floating flex-fill mb-0">
                  <input
                    type="password"
                    id="password"
                    name="password"
                    class="form-control"
                    placeholder="Password"
                    required
                  />
                  <label class="form-label" for="password">Password</label>
                  <div class="invalid-feedback">Please enter a password.</div>
                </div>
              </div>

              <div class="d-flex flex-row align-items-center mb-4">
                <i
                  class="bi bi-key-fill me-3 mt-auto"
                  style="font-size: 2rem"
                ></i>
                <div class="form-floating flex-fill mb-0">
                  <input
                    type="password"
                    id="repeatPassword"
                    name="repeatPassword"
                    class="form-control"
                    placeholder="Repeat Password"
                    required
                  />
                  <label class="form-label" for="form3Example4cd"
                    >Repeat Password</label
                  >
                </div>
              </div>

              <div class="form-check d-flex justify-content-center mb-5">
                <input
                  class="form-check-input me-2"
                  type="checkbox"
                  value="true"
                  id="tos"
                  name="tos"
                />
                <label class="form-check-label" for="tos">
                  I agree with the
                  <a href="#!">Terms of Service</a>
                </label>
              </div>

              <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                <button type="submit" class="btn btn-outline-dark btn-lg">
                  Register
                </button>
              </div>
            </form>
          </div>
          <div
            class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2"
          >
            <img
              src="https://images.unsplash.com/photo-1636659638188-4999d56db1e4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=3731&q=80"
              class="img-fluid"
              alt="Sample image"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
